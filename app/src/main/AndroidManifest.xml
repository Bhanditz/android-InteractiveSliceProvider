<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.interactivesliceprovider">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <meta-data
                android:name="android.metadata.SLICE_URI"
                android:value="@string/default_slice_uri" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".InteractiveSliceProvider"
            android:authorities="com.example.android.interactivesliceprovider"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.intent.SLICE_ACTION" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.app.slice.category.SLICE" />

                <data
                    android:host="interactivesliceprovider.android.example.com"
                    android:pathPrefix="/"
                    android:scheme="https" />
            </intent-filter>
        </provider>

        <receiver
            android:name=".AppIndexingUpdateReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.permission.APPINDEXING">
            <intent-filter>
                <action android:name="com.google.firebase.appindexing.UPDATE_INDEX" />
            </intent-filter>
        </receiver>

        <service
            android:name=".AppIndexingUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!--
        Activities associated with each slice. Firebase App Indexing requires an indexable slice
        to be associated with an Activity.
        -->
        <activity android:name=".sliceactivities.GallerySliceActivity" />
        <activity android:name=".sliceactivities.GridSliceActivity" />
        <activity android:name=".sliceactivities.HelloSliceActivity" />
        <activity android:name=".sliceactivities.InputRangeSliceActivity" />
        <activity android:name=".sliceactivities.ListSliceActivity" />
        <activity android:name=".sliceactivities.NoteSliceActivity" />
        <activity android:name=".sliceactivities.RangeSliceActivity" />
        <activity android:name=".sliceactivities.ReservationSliceActivity" />
        <activity android:name=".sliceactivities.RideSliceActivity" />
        <activity android:name=".sliceactivities.ToggleSliceActivity" />
        <activity android:name=".sliceactivities.WeatherSliceActivity" />
        <activity android:name=".sliceactivities.WifiSliceActivity" />
    </application>

</manifest>